<?xml version="1.0" encoding="UTF-8" ?>
<experiment boot="need:2.0">
	<services>
		<service name="dashboard" image="warpenguin.no-ip.org/dashboard:1.0" supervisor="true" port="8088"/>
		<service name="logger"  image="warpenguin.no-ip.org/logger:1.0" supervisor="true" />
		<service name="client" image="warpenguin.no-ip.org/alpineclient:1.0" reuse="true" command="['server', '0', '0']"/>
		<service name="server" image="warpenguin.no-ip.org/alpineserver:1.0" reuse="true" share="false"/>
	</services>
	<bridges>
                <bridge name="s1"/>
                <bridge name="s2"/>
	</bridges>
        <links>
                <link origin="client" dest="s1" latency="5" upload="100Mbps" download="100Mbps" network="test_overlay"/>
                <link origin="s1" dest="s2" latency="10" upload="50Mbps" download="50Mbps" network="test_overlay"/>
                <link origin="s2" dest="server" latency="5" upload="100Mbps" download="100Mbps" network="test_overlay"/>
	</links>
	<dynamic>
		<schedule name="server"  time="0.0" action="join" amount="5"/>
		<schedule name="client"  time="0.0" action="join" amount="5"/>

		<schedule name="server"  time="10.0" action="join" amount="5"/>
		<schedule name="client"  time="10.0" action="join" amount="5"/>
	
		<schedule name="client"  time="20.0" action="leave" amount="8"/>
		<schedule name="client"  time="20.0" action="crash" amount="2"/>
		
		<schedule name="client"  time="25.0" action="join" amount="5"/>
		<schedule name="client"  time="30.0" action="disconnect" amount="4"/>
		<schedule name="client"  time="40.0" action="crash" amount="5"/>
		<schedule name="server"  time="40.0" action="crash" amount="10"/>
	</dynamic>
</experiment>
