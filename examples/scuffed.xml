<?xml version="1.0" encoding="UTF-8" ?>
<experiment boot="need:2.0">
	<services>
		<service name="dashboard" image="warpenguin.no-ip.org/dashboard:1.0" supervisor="true" port="8088"/>
		<service name="logger"  image="warpenguin.no-ip.org/logger:1.0" supervisor="true" />
		<service name="client1" image="warpenguin.no-ip.org/alpineclient:1.0" replicas="10" command="['server1', '0', '0']"/>
		<service name="server1" image="warpenguin.no-ip.org/alpineserver:1.0" replicas="10" share="false"/>
		<service name="client2" image="warpenguin.no-ip.org/alpineclient:1.0" replicas="10" command="['server2', '0', '0']"/>
		<service name="server2" image="warpenguin.no-ip.org/alpineserver:1.0" replicas="10" share="false"/>
	</services>
	<bridges>
                <bridge name="s1"/>
                <bridge name="s2"/>
	</bridges>
        <links>
                <link origin="client1" dest="s1" latency="10" upload="2100Mbps" download="2100Mbps" network="test_overlay"/>
                <link origin="client2" dest="s1" latency="10" upload="2100Mbps" download="2100Mbps" network="test_overlay"/>
                <link origin="s1" dest="s2" latency="10" upload="1000Mbps" download="1000Mbps" network="test_overlay"/>
                <link origin="s2" dest="server1" latency="5" upload="2100Mbps" download="2100Mbps" network="test_overlay"/>
                <link origin="s2" dest="server2" latency="5" upload="2100Mbps" download="2100Mbps" network="test_overlay"/>
	</links>
	<dynamic>
		<schedule name="client1" time="0.0" action="join" amount="10"/>
		<schedule name="client2" time="0.0" action="join" amount="10"/>
		<schedule name="server1" time="0.0" action="join" amount="10"/>
		<schedule name="server2" time="0.0" action="join" amount="10"/>
		
		<schedule name="client1" time="480.0" action="crash" amount="10"/>
		<schedule name="client2" time="480.0" action="crash" amount="10"/>
		<schedule name="server1" time="480.0" action="crash" amount="10"/>
		<schedule name="server2" time="480.0" action="crash" amount="10"/>
	</dynamic>
</experiment>
